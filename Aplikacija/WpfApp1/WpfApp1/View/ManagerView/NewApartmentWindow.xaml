<Window x:Class="ReservationSystem.View.ManagerView.NewApartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReservationSystem.View.ManagerView"
        mc:Ignorable="d"
        Title="NewApartmentWindow" Height="300" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:" />
            <TextBox Name="NameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Description:" />
            <TextBox Name="DescriptionTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Number of Rooms:" />
            <TextBox Name="NumberOfRoomsTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Max Guests:" />
            <TextBox Name="MaxGuestsTextBox" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Width="75" Margin="5" Click="SaveButton_Click"/>
                <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
