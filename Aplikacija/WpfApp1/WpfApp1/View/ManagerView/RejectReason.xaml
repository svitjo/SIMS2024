<Window x:Class="ReservationSystem.View.ManagerView.RejectReason"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReservationSystem.View.ManagerView"
        mc:Ignorable="d"
        Title="RejectReason" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Please enter the reason for rejection:" Margin="10"/>
            <TextBox x:Name="ReasonTextBox" Margin="10" Height="100" TextWrapping="Wrap"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button Content="OK" Width="75" Margin="5" Click="OK_Click"/>
                <Button Content="Cancel" Width="75" Margin="5" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
