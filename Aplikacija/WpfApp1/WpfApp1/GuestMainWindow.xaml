<Window x:Class="ReservationSystem.GuestMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GuestMainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="True">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Welcome!" IsEnabled="False"/>
                <MenuItem Header="Hotels" Click="Hotels_Click"/>
                <MenuItem Header="Reservation" Click="Reservation_Click"/>
                <MenuItem Header="Logout" Click="Logout_Click"/>
            </Menu>
            <Frame Name="MainContent" />
        </DockPanel>
    </Grid>
</Window>

